package programmers.level1;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Solution_두개뽑아서더하기 {
	
    public int[] solution(int[] numbers) {
        boolean[] isMaked = new boolean[201];
        int[] combination = new int[2];
        makeCombination(combination, numbers, isMaked, 0, 0);
        
        List<Integer> sums = new ArrayList<Integer>();
        for (int i = 0; i < isMaked.length; i++) if(isMaked[i]) sums.add(i);
        
        return sums.stream().mapToInt(i -> i.intValue()).toArray();
    }
	
	private void makeCombination(int[] combination, int[] numbers, boolean[] isMaked, int index, int before) {
		if(index == combination.length) {
			isMaked[numbers[combination[0]] + numbers[combination[1]]] = true;
		} else {
			for (int i = before; i < numbers.length; i++) {
				combination[index] = i;
				makeCombination(combination, numbers, isMaked, index+1, i+1);
			}
		}
	}

	public static void main(String[] args) {
		Solution_두개뽑아서더하기 s = new Solution_두개뽑아서더하기();
		System.out.println(Arrays.toString(s.solution(new int[] {2, 1, 3, 4, 1})));
	}
}
