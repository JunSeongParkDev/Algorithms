package programmers.level1;

public class Solution_3진법뒤집기 {
    public int solution(int n) {
        StringBuilder third = new StringBuilder(Integer.toString(n, 3));
        int reversed = Integer.parseInt(third.reverse().toString(), 3);
    	System.out.println(third);
    	System.out.println(reversed);
        return 0;
    }
    
    public static void main(String[] args) {
		Solution_3진법뒤집기 s = new Solution_3진법뒤집기();
		System.out.println(s.solution(45));
	}
}
